{% extends 'base.html.twig' %}

{% block title %}Pic index{% endblock %}

{% block body %}
    <h1>Pic index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Width</th>
                <th>Height</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pic in pics %}
            <tr>
                <td>{{ pic.id }}</td>
                <td>{{ pic.name }}</td>
                <td>{{ pic.width }}</td>
                <td>{{ pic.height }}</td>
                <td>{{ pic.type }}</td>
                <td>
                    <a href="{{ path('pic_show', {'id': pic.id}) }}">show</a>
                    <a href="{{ path('pic_edit', {'id': pic.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pic_new') }}">Create new</a>
{% endblock %}
